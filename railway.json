{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements-railway.txt && chmod +x railway-setup.sh && ./railway-setup.sh"
  },
  "deploy": {
    "startCommand": "python app_railway.py",
    "healthcheckPath": "/status",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ALWAYS"
  },
  "environments": {
    "production": {
      "FLASK_ENV": "production",
      "FLASK_DEBUG": "False",
      "PYTHONPATH": "/app"
    }
  }
}